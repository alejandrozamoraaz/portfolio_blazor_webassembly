@page "/"

<div class="col gap-large">
    <section id="Header" class="show-on container-fluid gradient-background-color border-radius-large vertical-center" style="height: 500px">
        <Portfolio.Components.Pages.Sections.Header />
    </section>

    @foreach (var item in NavigationService.Navigation)
    {
        <section id="@item.LinkName" class="show-on container surface-background-color border-radius-large p-y p-x">
            <div class="row vertical-center m-y-large gap">
                <img class="icon-large" src="@item.IconUrl" alt="@item.IconAlt" />
                <h3 class="text-large">@item.Name</h3>
            </div>
            <div class="row">
                @item.Content
            </div>
        </section>
    }
</div>

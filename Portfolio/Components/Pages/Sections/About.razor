<div class="col col-12">
    <div class="text m-b-large">
        <p style="font-weight: 800;">@CultureDisplay["About01"]</p>
        <p class="m-y-large">@CultureDisplay["About02"]</p>
        <div class="row">
            <div class="col col-6">
                <p>@CultureDisplay["About03"]</p>
            </div>
            <div class="col col-6">
                <p>@CultureDisplay["About04"]</p>
            </div>
        </div>
    </div>

    <h1 class="primary-text-color m-t-large">@CultureDisplay["Skills"]</h1>
    <div class="m-y-large grid grid-small-items text-center text-small">
        @foreach (var skill in Skills)
        {
            <div class="card-border p-x-small p-y-small border-radius vertical-center horizontal-center">
                <p>@skill</p>
            </div>
        }
    </div>

    <h1 class="primary-text-color m-y-large">@CultureDisplay["Badges"]</h1>
    <div class="grid grid-items">
        @foreach (var badge in Badges)
        {
            <a class="button col" target="_blank" href="@badge.Url">
                <img height="100" width="100" alt="@badge.Name" src="assets/images/badges/@badge.ImageName" />
                <p class="text-center">@badge.Name</p>
            </a>
        }
    </div>
</div>


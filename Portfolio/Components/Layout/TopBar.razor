@using System.Globalization

<div class="top-bar background-color vertical-center p-x-small">
    <div class="row vertical-center">
        <div class="col col-2">
            <div class="brand vertical-center">
                <img src="icon-192.png" alt="Logo" class="image" />
            </div>
        </div>
        <div class="col col-10">
            <div class="actions gap">
                @if (CultureInfo.CurrentCulture.Name != "es")
                {
                    <p class="chip">@CultureDisplay["TextAutoTranslated"]</p>
                }
                <SelectCulture />
            </div>
        </div>
    </div>
</div>

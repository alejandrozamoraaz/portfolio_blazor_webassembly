@inject IJSRuntime JSRuntime

<div class="navigation-bar background-color">
    @foreach (var section in NavigationService.Navigation)
    {
        <button id="@("#" + section.LinkName)" type="button" @onclick="async () => await NavigateTo(section.LinkName)" class="button">
            <img class="icon" src="@(section.IconUrl)" alt="@(section.IconAlt)" />
            <h6 class="text-small">@(section.Name)</h6>
        </button>
    }
</div>

@code {
    private async Task NavigateTo(string sectionName)
    {
        await JSRuntime.InvokeVoidAsync("scrollToSection", sectionName);
    }
}
